<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/edit_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_product_name_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/product_name_header" />

        <EditText
            android:id="@+id/edit_product_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_product_quantitiy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_product_current_quantity_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/product_inventory_header" />

        <EditText
            android:id="@+id/edit_product_current_inventory_quantity_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_product_price_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/product_price_in_cents_header" />

        <EditText
            android:id="@+id/edit_product_price_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_product_supplier_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_product_supplier_name_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/product_supplier_name_header" />

        <EditText
            android:id="@+id/edit_product_supplier_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_product_supplier_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_product_supplier_email_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/product_supplier_email_header" />

        <EditText
            android:id="@+id/edit_product_supplier_email_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_product_image_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/product_photo_header" />

        <EditText
            android:id="@+id/edit_product_image_source_id_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/product_image_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/select_product_image_button"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="@string/select_product_image_button" />

            <Button
                android:id="@+id/add_new_product_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/add_product_to_database_button" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>